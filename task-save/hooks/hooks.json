{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/pr-checklist-sync.py"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "^(?!Bash$|Explore$)",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/subagent-task-persist.py"
          }
        ]
      }
    ]
  }
}
